<!DOCTYPE html>
<html>
<head>
  <title>Namedatabase</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    <ul class="nav navbar-nav pull-right">

      <li class="search">
      <%= form_tag(controller: "sessions", action: "new_search", method: "post") do %>
        <div class=class="navbar-form navbar-left">
          <%= text_field_tag "query"%>
        </div>
      </li>
        <li class="search">
          <%= submit_tag"🔍", class: 'btn-btn-primary' %>
        <% end %>
        </li>

      <li><%= image_tag current_user.picture, alt: current_user.name %></li>
      <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
    </ul>
  <% else %>
    <ul class="nav navbar-nav">
      <li><%= link_to 'Facebook', '/auth/facebook' %></li>
    </ul>
  <% end %>


<%= yield %>

</body>
</html>
